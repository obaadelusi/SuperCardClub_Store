<main class="container py-5">

  <div class="d-flex gap-2 align-items-center">
    <i class="bi bi-arrow-left"></i>
    <%= link_to "Back", :back %>
  </div>

  <%#= resource_name.to_s.humanize %>
  <h1 class="mb-3">Edit Your Account<span>.</span></h1>

  <div class="my-5" style="max-width: 520px;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <%= render "customers/shared/error_messages", resource: resource %>

    <!-- SECTION: Edit personal details -->
    <h3>Personal details</h3>

    <div class="mb-3">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, autocomplete: "given-name", :class=>'form-control' %>
    </div>

    <div class="mb-3 pb-5">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, autocomplete: "family-name", :class=>'form-control' %>
    </div>

    <hr>
    <!-- SECTION: Edit your address -->
    <h3>Address</h3>

    <div class="mb-3">
      <%= f.label :street %>
      <%= f.text_field :street, :class=>'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :province %>
      <%= f.select :province_id, @provinces, {}, { class: 'form-select'} %>
    </div>

    <div class="mb-3">
      <%= f.label :country %>
      <%= f.select :country, ["Canada"], {}, { class: 'form-select'} %>
    </div>

    <div class="mb-3 pb-5">
      <%= f.label :postal_code %>
      <%= f.text_field :postal_code, autocomplete: "postal-code", :class=>'form-control' %>
    </div>

    <hr>
    <!-- SECTION: Change your login -->
    <h3>Login info</h3>

    <div class="mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", :class=>'form-control' %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="mb-3">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", :class=>'form-control' %>
      <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :current_password %> <i>(Enter your current password to save your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", :class=>'form-control border-warning' %>
    </div>

    <div class="actions">
      <%= f.submit "Update", :class=>'btn btn-success' %>
    </div>
    <% end %>
  </div>


  <div>
    <h4>Cancel my account</h4>
    <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, :class=>'btn btn-sm btn-danger' %>
  </div>
</main>
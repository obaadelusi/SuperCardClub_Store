<div class="w-100 text-bg-dark d-flex topbar">
    <ul class="d-flex align-items-center ms-auto gap-2 list-style-none">
        <% if customer_signed_in? %>
        <li>
            <div class="dropdown">
                <button class="btn btn-sm text-bg-dark dropdown-toggle" data-bs-toggle="dropdown">
                    <i class="bi bi-info-circle"></i>
                    Hello,
                    <%= current_customer.respond_to?(:first_name) ? current_customer.first_name : current_customer.email.split("@").first %>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="/customers/edit" class="dropdown-item">
                            <i class="bi bi-person-circle"></i>
                            Account
                        </a></li>
                    <li><a href="/customers/orders" class="dropdown-item">
                            <i class="bi bi-box-seam-fill"></i>
                            Orders
                        </a></li>
                </ul>
            </div>
        </li>
        <li>
            <%= form_with(url: "/customers/sign_out", method: "delete") do %>
            <%= submit_tag "Sign out", :class=>'btn btn-sm btn-link text-danger' %>
            <% end %>
        </li>
        <% else %>
        <li><%=link_to 'Sign In', new_customer_session_path, :class=>"text-light"%></li> /
        <li><%=link_to 'Sign Up', new_customer_registration_path, :class=>"text-light"%></li>
        <% end %>
    </ul>
</div>
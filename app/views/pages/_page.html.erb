<a href="/pages/<%=page.slug%>" id="<%= dom_id page %>"
  class="list-group-item list-group-item-action text-decoration-none" aria-current="true">
  <div class="d-flex w-100 justify-content-between">
    <h5 class="mb-1"><%=page.title%></h5>
    <small>Last updated: <%=page.updated_at.strftime('%b %d, %Y')%></small>
  </div>
  <p class="mb-1"><%=page.content[0,100]%></p>
  <small>Click to view page.</small>
</a>
<header class="page-header-plus-pattern">
  <small class="text-uppercase">Publisher</small>
  <h1><%= @publisher.name %></h1>
  <div class="d-flex align-items-center">
    <%= link_to "Edit this publisher", edit_publisher_path(@publisher) %> &ensp; /
    <%= button_to "Delete", @publisher, method: :delete, :class => 'btn-reset d-inline text-danger' %>
  </div>
</header>

<main class="container">
  <p class="text-success"><%= notice %></p>

  <div id="breadcrumbs" class="d-flex align-items-center gap-1 py-2 text-bg-light">
    <%= link_to 'Home', root_path, :class => 'text-decoration-none' %> /
    <%= link_to "Publishers", publishers_path, :class => 'text-decoration-none' %>
    <i class="bi bi-arrow-right"></i>
    <span class="text-secondary"><%= @publisher.name %></span>
    <%#= link_to @page.title, page_by_slug_url(slug: @page.slug) %>
  </div>

  <div class="d-flex align-items-center gap-2 mt-3" id="publisher">
    <i class="bi bi-printer-fill"></i>
    <h3><%= @publisher.name %></h3>
  </div>

  <ul>
    <li>Characters published: <%= @publisher.characters.count %></li>
  </ul>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Character name</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% @publisher.characters.each_with_index do |c, i| %>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= link_to c.name, c %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</main>